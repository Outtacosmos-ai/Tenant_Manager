# .env

# Postgres credentials
POSTGRES_DB=dentiapro_db
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres   # Replace with a secure password

# Django Settings
DJANGO_SECRET_KEY="replace_this_with_a_random_secret"
DJANGO_DEBUG=true           # or false for production
DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1  # comma-separated hostnames

# Optional: If you want environment-based config
DB_NAME=$POSTGRES_DB
DB_USER=$POSTGRES_USER
DB_PASSWORD=$POSTGRES_PASSWORD
DB_HOST=db
DB_PORT=5432
